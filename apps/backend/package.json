{
    "name": "lobby-backend",
    "version": "0.0.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "rebuild": "rm -rf ./dist && esbuild --bundle --platform=node --target=node18 --outdir=dist src/index.ts",
        "build": "esbuild --bundle --platform=node --target=node18 --outdir=dist src/index.ts",
        "start": "node dist/index",
        "dev": "ts-node-dev -r tsconfig-paths/register --project .  --respawn src/index.ts",
        "format": "prettier --no-error-on-unmatched-pattern --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint \"{src,apps,libs,test}/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "test": "jest --coverage"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.1.1",
        "@jest/globals": "^29.5.0",
        "@tsconfig/node-lts": "^20.1.3",
        "@types/jest": "^29.5.0",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "esbuild": "^0.17.19",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.5.0",
        "jest-extended": "^3.2.4",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.0",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.7.1"
    },
    "dependencies": {
        "@packages/domain": "file:../../packages/domain",
        "fastify": "^4.26.2",
        "fastify-socket.io": "^5.0.0",
        "socket.io": "^4.7.5"
    }
}
