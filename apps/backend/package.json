{
    "name": "lobby-backend",
    "version": "0.0.0",
    "description": "",
    "main": "src/index.ts",
    "scripts": {
        "rebuild": "rm -rf ./dist && npm run build",
        "build": "cross-env NODE_ENV=production esbuild --bundle --platform=node --target=node18 --outdir=dist src/index.ts",
        "start": "node dist/index",
        "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --project .  --respawn src/index.ts",
        "format": "prettier --no-error-on-unmatched-pattern --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint \"{src,apps,libs,test}/**/*.ts\"",
        "typecheck": "tsc --noEmit",
        "test:e2e": "cross-env NODE_ENV=test jest --forceExit --logHeapUsage --runInBand --verbose --silent=false --testMatch=\"**/*-controller.test.ts\""
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "engines": {
        "node": ">=16.0.0"
    },
    "jest": {
        "testTimeout": 3000,
        "globals": {
            "ts-jest": {
                "tsconfig": "./tsconfig.json"
            },
            "SOCKET_URL": "http://localhost:8002"
        },
        "globalSetup": "./test/setupGlobal.ts",
        "preset": "ts-jest",
        "moduleNameMapper": {
            "~/routes": "<rootDir>/src/routes",
            "~/(.*)": "<rootDir>/src/$1"
        },
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "transform": {
            "^.+\\.(t|j)s?$": [
                "@swc/jest",
                {
                    "jsc": {
                        "parser": {
                            "syntax": "typescript",
                            "jsx": false,
                            "decorators": true,
                            "dynamicImport": true
                        }
                    }
                }
            ]
        },
        "testEnvironment": "node"
    },
    "devDependencies": {
        "@eslint/js": "^9.1.1",
        "@jest/globals": "^29.7.0",
        "@swc/core": "^1.5.5",
        "@swc/jest": "^0.2.36",
        "@tsconfig/node-lts": "^20.1.3",
        "@types/jest": "^29.5.0",
        "@types/node-uuid": "^0.0.32",
        "@typescript-eslint/eslint-plugin": "^7.7.1",
        "@typescript-eslint/parser": "^7.7.1",
        "cross-env": "^7.0.3",
        "esbuild": "^0.17.19",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.5.0",
        "jest-extended": "^3.2.4",
        "prettier": "^3.2.5",
        "socket.io-client": "^4.7.5",
        "ts-jest": "^29.1.0",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.7.1"
    },
    "dependencies": {
        "@packages/domain": "file:../../packages/domain",
        "@packages/socket": "file:../../packages/socket",
        "dotenv": "^16.4.5",
        "fastify": "^4.26.2",
        "fastify-socket.io": "^5.0.0",
        "jose": "^5.3.0",
        "node-uuid": "^1.4.8",
        "pg": "^8.11.5",
        "reflect-metadata": "^0.2.2",
        "socket.io": "^4.7.5",
        "tsyringe": "^4.8.0",
        "typeorm": "^0.3.20"
    }
}
